{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "baseUrl": "./",
    "outDir": "acme",
    "paths": {
      "@app/*": [
        "./*"
      ],
      "@enums/*": [
        "src/enums/*"
      ],
      "@errors/*": [
        "src/errors/*"
      ],
      "@core/*": [
        "src/core/*"
      ],
      "@routes/*": [
        "src/routes/*"
      ],
      "@configs/*": [
        "src/configs/*"
      ],
      "@interfaces/*": [
        "src/types/*"
      ],
      "@utils/*": [
        "src/utils/*"
      ],
      "@authentication/*": [
        "src/modules/authentication/*"
      ],
      "@authorization/*": [
        "src/modules/authorization/*"
      ],
      "@insurer/*": [
        "src/modules/insurer/*"
      ],
      "@productsHub/*": [
        "src/modules/products-hub/*"
      ],
      "@products/*": [
        "src/modules/products/*"
      ],
      "@crm/*": [
        "src/modules/crm/*"
      ],
      "@mc/*": [
        "src/modules/merchant/*"
      ],
      "@ewallet/*": [
        "src/modules/ewallet/*"
      ],
      "@apps/*": [
        "src/modules/apps/*"
      ],
      "@cron/*": [
        "src/modules/cron/*"
      ],
      "@affiliate/*": [
        "src/modules/affiliate/*"
      ],
      "@g2/*": [
        "src/modules/g2/*"
      ],
      "@schemas/*": [
        "src/schemas/*"
      ],
      "@partner/*": [
        "src/modules/partner/*"
      ],
      "@chatbot/*": [
        "src/modules/chatbot/*"
      ],
    },
    "typeRoots": [
      "src/types",
      "./node_modules/@types"
    ],
    "types": [],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "acme"
  ]
}